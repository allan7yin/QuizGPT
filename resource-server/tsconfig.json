{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "types": ["node"],
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": [
    "src/**/*.ts",
    "./environment.d.ts",
    "src/redis/redisConfig.ts",
    "src/redisOM/quiz.js"
  ]
}
